{
  "name": "testing_tests",
  "version": "1.0.0",
  "description": "Cypress Automation Framework",
  "main": "index.js",
  "scripts": {
    "triggerAllTests-headless": "npx cypress run",
    "triggerAllTests-headed": "npx cypress run --headed",
    "triggerAllTests-chrome": "npx cypress run --browser chrome",
    "triggerAllTests-dashboard": "npx cypress run --record --key 9a9eb3a0-3c31-4aed-9ab3-3d177080462e",
    "triggerWebdriverUni": "npx cypress run --spec cypress/e2e/webdriver-uni/*",
    "triggerWebdriverUni-dashboard": "npx cypress run --spec cypress/e2e/webdriver-uni/* --record --key 9a9eb3a0-3c31-4aed-9ab3-3d177080462e --paralell --browser chrome --headed",
    "triggerAutoTestStore": "npx cypress run --spec cypress/e2e/automation-teststore/*",
    "triggerAutoTestStore-dashboard": "npx cypress run --spec cypress/e2e/automation-teststore/* --record --key 9a9eb3a0-3c31-4aed-9ab3-3d177080462e --paralell --browser chrome --headed",
    "jUnit-merge": "npx junit-merge -d cypress/results/junit -o cypress/results/junit/allResults.xml",
    "delete-junit-report": "rm -rf cypress/results/junit/allResults.xml",
    "clear-results-folder": "rm -rf cypress/results/* || true",
    "triggerAllTests-staging":  "npx cypress run --env configFile=staging",
    "cypress-multi-browser": "npm run triggerAutoTestStore -- --browser electron --headed & npm run triggerAutoTestStore -- --browser firefox --headed"
  },
  "author": "Anna Kosakowska",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^12.12.0",
    "cypress-multi-reporters": "^1.6.4",
    "cypress-xpath": "^2.0.1",
    "mocha-junit-reporter": "^2.2.1"
  }
}
